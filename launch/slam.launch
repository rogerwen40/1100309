<launch>
  <!-- 加載機器人描述文件 -->
  <param name="robot_description" command="$(find xacro)/xacro '$(find frp_1100309_description)/urdf/frp_1100309.xacro'" />

  <!-- 啟動Gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch" />

  <!-- 啟動機器人的控制器 -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen"
        args="joint_state_controller differential_drive_controller" />

  <!-- 啟動Gmapping -->
  <node name="slam_gmapping" pkg="gmapping" type="slam_gmapping" respawn="false" output="screen">
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_update_interval" value="5.0"/>
    <param name="delta" value="0.05"/>
  </node>
</launch>
